<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand navbar-dark bg-dark d-flex">
			<div class="container d-flex">
				<a href="{{path('index')}}" class="navbar-brand">Symfony App</a>
				<div class="collapse navbar-collapse d-flex">
					<ul class="navbar-nav">
						{% if is_granted('ROLE_USER') %}
							<li class="nav-item">
								<a href="{{ path('categoria')}}" class="nav-link">Categorias</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('produto')}}" class="nav-link">Produtos</a>
							</li>

						{% else %}
							<li class="nav-item">
								<a href="{{ path('app_registro')}}" class="nav-link">Registro</a>
							</li>
							<li class="nav-item">
								<a href="{{ path('app_login')}}" class="nav-link">Login</a>
							</li>
						</ul>
					</div>
				{% endif %}

			</div>
			<ul class="navbar-nav gap-2">
				{% if is_granted('ROLE_USER') %}
					<li class="nav-item">
						<span class="text-info">{{ app.user.nome }}</span>
					</li>
					<li class="nav-item">
						<a href="{{ path('app_logout')}}" class="text-black bg-light px-2 py-1 rounded text-decoration-none">Sair</a>
					</li>

				{% endif %}
			</nav>
			<div class="container d-flex flex-column justify-content-center vh-100"> {% block body %}{% endblock %}

				</div>
			</body>
		</body>
	</html>
